# Redmine create backup data vars

# Host running the database
redmine_db_host: localhost

# The password to establish the PostgreSQL session
redmine_db_password: password

# Redmine database name
redmine_db_name: redmine

# The user name to establish the PostgreSQL session
redmine_db_user: redmine

#----------------------------------------
# 将来的に実装予定
#
# RDBMSの稼働するするマシンの接続ポート番号
# db_port: 5432
#----------------------------------------

# Backup data path
redmine_backup_data_dir: /tmp/redmine-backup

# Archived Git data file
redmine_archived_git_file: git.tar.gz

# Git Directory
redmine_git_dir: /var/git

# Archived Redmine media file
redmine_archived_media_file: files.tar.gz

# Redmine media file directory
redmine_file_dir: /var/lib/redmine/files

# Archived PostgreSQL dumped data file
redmine_archived_pg_dump_file: redmine.psql.tar.gz
